{
    "version": 2,
    "framework": null,
    "functions": {
        "api/index.php": { 
            "runtime": "@php-runtime/vercel-php@2"
        }
    },
    "routes": [
        {
            "src": "/(css|js|images|storage|build|assets)/(.*)",
            "dest": "/public/$1/$2"
        },
        {
            "src": "/(.*)",
            "dest": "/api/index.php"
        }
    ]
}